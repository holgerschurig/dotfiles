[user]
	# email comes as $EMAIL from /etc/profile.d/email.sh
	name = Holger Schurig
	email = holgerschurig@gmail.com

[alias]
	st = status
	co = checkout
	qi = quiltimport --author 'Holger Schurig <holgerschurig@gmail.de>'
	wu = log --stat origin..@{0}
	wup = log -p origin..@{0}
	p = format-patch -o p
	news = log --reverse --no-merges -p ORIG_HEAD..HEAD
	rlog = log --reverse --no-merges
	glog =  log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
	overview = log --graph --simplify-by-decoration --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
	desc = describe --tags

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = holgerschurig@gmail.com
	thread = no
	smtpserverport = 587
	aliasesfile = ~/.gitaliases
	aliasfiletype = mailrc
	chainreplyto = false
	confirm = auto

[branch]
	sort = committerdate
# [color]
# 	ui = false
[core]
	#pager = less -F -X
[diff]
	algorithm = histogram
	submodule = log
[diff "elisp"]
	xfuncname = "^\\(.*"
[fetch]
	fsckobjects = true
	prune = true
	prunetags = true
[http]
	sslverify = false
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
[log]
	date = iso
[pager]
	diff = false
	branch = false
	tag = false
[push]
	default = current
	followtags = true
[rerere]
	enabled = true
[receive]
	fsckobjects = true
[status]
	submoduleSummary = true
[tag]
	sort = taggerdate
[transfer]
	fsckobjects = true
[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"


#############################################################################
#
# https://dandavison.github.io/delta/introduction.html
#
#[core]
#	pager = delta
[delta]
	features = decorations interactive unobtrusive-line-numbers
	line-numbers = true
	true-color = always
	navigate = true
	file-modified-label = ""
	right-arrow = "⟶"
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	# file-style = omit
	file-style = bold yellow ul
	file-decoration-style = none
	hunk-header-style = syntax
[delta "interactive"]
	keep-plus-minus-markers = false
[delta "unobtrusive-line-numbers"]
	line-numbers = true
	line-numbers-zero-style = "#888888"
	line-numbers-plus-style = "#00c000"
	line-numbers-minus-style = "#c00000"
	line-numbers-left-style = "#0000c0"
	line-numbers-right-style = "#0000c0"
	line-numbers-left-format = "{nm:>4}┊"
	line-numbers-right-format = "{np:>4}│"
[interactive]
	diffFilter = delta --color-only --features=interactive


